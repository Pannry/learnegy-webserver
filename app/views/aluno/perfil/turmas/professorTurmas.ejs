<% include ../../../partials/aluno-top %>
<div class="card-body">
  <div class="row">
    <div class="mr-auto col-md-6">
      <h3> Selecione a turma: </h3>
      <hr>
    </div>

  </div>



  <!-- Corpo -->
  <form action="/turmas/professor/:id" method="post">

    <% if( listaSalaAluno.length !== 0 ){ %>
    <% for (var i = 0; i < listaSalaAluno.length; i++){ %>
    <li class="list-group-item col-md-10 col-sm-12" value="<%=listaSalaAluno[i].id%>">

      <div class="row">
        <div class="col-7">
          <%= listaSalaAluno[i].nome %>,
          <%= listaSalaAluno[i].semestre %>
        </div>

        <div class="col-5">
          <input class="btn btn-secondary btn-sm" type="submit" name="<%=listaSalaAluno[i].id%>" value="Entrar"></input>
        </div>
      </div>

    </li>
    <% } %>

    <% } else {%>
    <p>Esse professor não possui turmas disponíveis.</p>
    <% } %>
  </form>
</div>
<% include ../../../partials/aluno-bottom %>