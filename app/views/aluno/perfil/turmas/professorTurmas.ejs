<!DOCTYPE html>
<html>

<head>
  <% include ../../../partials/head %>
</head>

<body>

  <div class="wrapper">
    <!-- TITULO DO MENU LATERAL -->
    <nav id="sidebar" class="bg-dark">
      <div class="sidebar-header bg-dark">
        <h3>Sistema</h3>
      </div>

      <!-- OPÇÔES DO MENU LATERAL -->
      <% include ../../../partials/sidebar-menu-user %>

    </nav>

    <div id="content">

      <!-- CONFIGURACOES DO MENU LATERAL, NAO PRECISA ALTERAR -->
      <% include ../../../partials/sidebar-config %>

      <!-- INICIO DO CONTEUDO CENTRAL -->
      <div class="card">
        <div class="row">
          <div class="col-md"></div>
          <div class="col-md-10">
            <div class="card-body">
              <div class="row">
                <div class="mr-auto col-md-6">
                  <h1> Selecione a turma: </h1>
                </div>

              </div>

              <hr>

              <!-- Corpo -->
              <form action="/turmas/professor/:id" method="post">

                <% if( listaSalaAluno.length !== 0 ){ %>
                <% for (var i = 0; i < listaSalaAluno.length; i++){ %>
                <li class="list-group-item col-md-10 col-sm-12" value="<%=listaSalaAluno[i].id%>">

                  <div class="row">
                    <div class="col-7">
                      <%= listaSalaAluno[i].nome %>,
                      <%= listaSalaAluno[i].semestre %>
                    </div>

                    <div class="col-5">
                      <input class="btn btn-secondary btn-sm" type="submit" name="<%=listaSalaAluno[i].id%>" value="Entrar"></input>
                    </div>
                  </div>

                </li>
                <% } %>

                <% } else {%>
                <p>Esse professor não possui turmas disponíveis.</p>
                <% } %>
              </form>
            </div>
          </div>
          <div class="col-md"></div>
        </div>
      </div>
      <!-- FIM DO CONTEUDO CENTRAL -->

    </div>
  </div>

  <% include ../../../partials/scripts %>

</body>

</html>