<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../../partials/head.ejs %>
</head>

<body>

    <!-- Nav dashboard -->
    <% include ../../../partials/navbar-dashboard.ejs %>

    <!-- Sidebar Menu -->
    <% include ../../../partials/sidebar-menu.ejs %>


    <!-- Content -->
    <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">
        
        <h1> <%= sala[0].nome+', '+sala[0].semestre %> </h1>
        <hr>

        <div class="card">
            <div class="card-body">

                <% if(aluno_aceito === 0){ %>
                    <h5>Esperando autorização professor</h5>
                <% } else if (aluno_aceito === 1){ %>
                    <h5>Você está dentro da turma!</h5>
                <% } %>

                <br>

                <h4>Observações do professor:</h4>
                <textarea class="form-control col-md-10" id="campoComentario" rows="4" readonly><%= sala[0].comentario %></textarea>
                
                <br>
                
                <h4>Listas de questoes:</h4>

                <ul class="list-group list-group-flush">
                    <% if ( lista.length === 0 ) { %>
                        <h5>Nenhuma lista disponivel, por favor, adicione alguma agora.</h5>
                    <% } else { %>
                        <% for (var i = 0; i < lista.length; i++) { %>
                            <a href="/turmas/abrir/<%= sala[0].id%>/<%= lista[i].id_lista%>/" class="list-group-item list-group-item-action">
                                <h5><p> <%= lista[i].titulo%> </p></h5>
                            </a>    
                        <% } %>
                    <% } %>
                </ul>

            </div>
        </div>        
    </main>

    <% include ../../../partials/scripts.ejs /%>
</body>

</html>