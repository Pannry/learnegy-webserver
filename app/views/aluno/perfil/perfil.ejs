<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../partials/head.ejs%>
</head>

<body>

    <!-- Nav dashboard -->
    <% include ../../partials/navbar-dashboard.ejs %>

    <!-- Sidebar Menu -->
    <% include ../../partials/sidebar-menu.ejs %>

    <!-- Show Perfil -->
    <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">

        <h1>√Årea do Professor</h1>                    
        <hr>
       
        <div class="row">
            <div class="col-1"></div>
            <div class="col-md-3"><label for="nome" class="col-form-label">Nome:</label></div>
            <div class="col-md-4 mr-auto">
                <input type="text" readonly class="form-control-plaintext" id="nome" value="<%= user.nome %>">
            </div>
        </div>

        <div class="row">
            <div class="col-1"></div>        
            <div class="col-md-3"><label for="email" class="col-form-label">Email:</label></div>
            <div class="col-md-4 mr-auto">
                <input type="text" readonly class="form-control-plaintext" id="email" value="<%= user.email %>">
            </div>
        </div>

        <br><br>

        <div class="row">
            <div class="col-1"></div>    
            <a class="col-2" href="/profile/update">
                <button type="submit" class="btn btn-info btn-sm">Atualizar Perfil</button>
            </a>
        </div>


    </main>

    <!--Scripts -->
    <% include ../../partials/scripts.ejs %>
        
</body>

</html>