<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../../partials/head.ejs %>
</head>

<body>

    <!-- Nav dashboard -->
    <% include ../../../partials/navbar-dashboard.ejs %>

    <!-- Sidebar Menu -->
    <% include ../../../partials/sidebar-menu.ejs %>

   <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">

        <h1> Material didático: </h1>
        <hr>
        <br>
        
        <div class="row ml-1">
            <p class="col-md-10 mt-1">
                <label class="font-weight-bold">Escolha com cuidado as listas que serão inclusas na turma:</label>
            </p>
        </div>

        <div class="list-group">
            <form action="/professor/turma/abrir/<%=idSala%>/aluno/incluirlista" method="post">
                <!-- elemento 1 -->
                <% for (var i = 0; i < lista.length; i++ ){%>
                    <li class="list-group-item col-md-10 col-sm-12 " value="<%=lista[i].id%>">

                        <div class="row form-check">
                            <div class="col-5">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="<%= lista[i].id%>" name="options">
                                    <%= lista[i].titulo%>
                                </label>
                            </div>
                        </div>

                    </li>
                <% } %>

                <br>
                <div class="col-1"><input class="btn btn-info btn" type="submit" value="Adicionar"></div>
            </form>    
        </div>

    </main>

    <% include ../../../partials/scripts.ejs %>
</body>

</html>