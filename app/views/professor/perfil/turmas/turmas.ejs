<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../../partials/head.ejs %>
        <!-- <style> *{border: 1px solid red;} </style> -->
</head>

<body>

    <!-- Nav dashboard -->
    <% include ../../../partials/navbar-dashboard.ejs %>

    <!-- Sidebar Menu -->
    <% include ../../../partials/sidebar-menu.ejs %>


    <!-- Content -->
    <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">

        <h1> Turmas </h1>

        <hr>

        <div class="row">
            <div class="col-md-1">
                <a class="btn btn-success " href="/professor/turmas/criar">Criar</a>
            </div>
        </div>
        <br>

        <div class="row ml-1">
            <p class="col-md-3 mt-1">
                <label for="selecionarTurma">Selecione uma turma: </label>
            </p>
        </div>

        <div class="form-group" >
            <div class="list-group">

                <!-- elemento 1 -->
                <% for (var i = 0; i < listaSala.length; i++){%>
                    <li class="list-group-item col-md-10 col-sm-12 " value="<%=listaSala[i].id%>">
                        
                        <div class="row">
                            <div class="col-7">
                                <%=listaSala[i].nome%>,
                                <%=listaSala[i].semestre%>
                            </div>

                            <div class="col-5">
                                <a href="/professor/turma/abrir/<%=listaSala[i].id%>/professor">
                                    <button type="submit" class="btn btn-secondary btn-sm">Abrir</button>
                                </a>
                                <a href="#">
                                    <button type="submit" class="btn btn-danger btn-sm" disabled>Excluir</button>
                                </a>

                            </div>
                        </div>

                    </li>   
                <%}%>

            </div>
        </div>

    </main>

    <% include ../../../partials/scripts.ejs /%>
    
</body>

</html>