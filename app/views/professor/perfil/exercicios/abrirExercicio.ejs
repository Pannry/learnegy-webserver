<% include ../../../partials/professor-top %>
<div class="card-body">
  <h3> Exerc√≠cio: </h3>
  <hr>

  <div class="card">

    <div class="card-header">
      <h5>
        <%= questao[0].titulo%>
      </h5>
    </div>

    <div class="card-body">
      <%= questao[0].descricao%>
    </div>

  </div>
  <br>

  <% if(paths.length != 0){ %>
  
    <div class="card">
    <div class="card-header">
      <h5>
        Material para download
      </h5>
    </div>

    <div class="card-body">
      <% for (let i = 0; i < paths.length; i++ ) { %>
      <a href="/professor/exercicios/abrir/<%= questao[0].id%>/download/<%= paths[i].file_name%>" class="list-group-item list-group-item-action">
        <div class="row">
          <div class="col-md-1"><i class="fa fa-download" aria-hidden="true"></i></div>
          <div class="col-md-10">
            <%= paths[i].file_name %>
          </div>
        </div>
      </a>
      <% } %>
    </div>

  </div>
  <% } %>

</div>
