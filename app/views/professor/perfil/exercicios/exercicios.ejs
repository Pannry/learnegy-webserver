<% include ../../../partials/professor-top %>
<div class="card-body">

  <h3> Exercícios: </h3>
  <hr>

  <div class="row">
    <div class="col-md-1">
      <a class="btn btn-success " href="/professor/exercicios/criar">Criar</a>
    </div>
  </div>
  <br>

  <div class="row ml-1">
    <p class="col-md-3 mt-1">
      <label for="selecionarTurma">Suas questões criadas: </label>
    </p>
  </div>

  <div class="form-group">
    <div class="list-group">

      <!-- elemento 1 -->
      <% for (var i = 0; i < listaExercicios.length; i++ ){%>
      <li class="list-group-item col-md-10 col-sm-12 " value="<%=listaExercicios[i].id%>">

        <div class="row">
          <div class="col-7">
            <%=listaExercicios[i].titulo%>
          </div>

          <div class="col-5">
            <a href="/professor/exercicios/abrir/<%=listaExercicios[i].id%>">
              <button type="submit" class="btn btn-secondary btn-sm">Abrir</button>
            </a>
            <a href="/professor/exercicios/excluir/<%=listaExercicios[i].id%>">
              <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
            </a>
          </div>
        </div>
      </li>
      <% } %>

    </div>
  </div>

</div>
<% include ../../../partials/professor-bottom %>