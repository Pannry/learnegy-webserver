<!DOCTYPE html>
<html lang="en">

<head>
    <!--Head properties -->        
    <% include ../../../partials/head.ejs%>
</head>

<body>

    <!-- Nav dashboard -->
    <% include ../../../partials/navbar-dashboard.ejs %>

    <!-- Sidebar Menu -->
    <% include ../../../partials/sidebar-menu.ejs %>

    <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">

        <h1> Lista: <%= lista[0].titulo%> </h1>
        <hr>
        
            <div class="card">
                
                <div class="card-header">
                    <h5><p><%= lista[0].titulo%></p></h5>
                </div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><h5><p>Tempo restante: <%= lista[0].tempo%></p></h5></li>
                    <li class="list-group-item"><h5><p><%= lista[0].descricao%></p></h5></li>
                </ul>

            </div>
            <br>
            <div class="card">
                
                <div class="card-header">
                    <h5><p> Exercicios: </p></h5>
                </div>

                <ul class="list-group list-group-flush">
                    <% for(var i = 0; i < exercicios.length; i++ ) { %>
                        <a href="/professor/exercicios/abrir/<%= exercicios[i].id_exercicios%>" class="list-group-item list-group-item-action">
                            <h5><p> <%= exercicios[i].titulo%> </p></h5>
                        </a>
                    <% } %>    
                </ul>

            </div>
            <br><br>

    </main>

    <!--Scripts -->
    <% include ../../../partials/scripts.ejs /%>
    
</body>

</html>