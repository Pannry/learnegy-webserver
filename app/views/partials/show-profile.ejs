<!-- Content -->
<main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">
        <div class="row">
            <div class="col-md-10">
                <% if (accountType === "aluno") { %>
                    <h1>Área do aluno</h1>
                <% } else if (accountType === "professor") {%>
                    <h1>Área do Professor</h1>                    
                <% } %>
            </div>
            <div class="col-md-2">
                <a class="btn btn-warning "href="/logout">Logout</a>
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="ml-auto col-md-3">
                <label for="nome" class="col-form-label">Nome:</label>
            </div>
            <div class="col-md-4 mr-auto">
                <input type="text" readonly class="form-control-plaintext" id="nome" value="<%= user.nome %>">
            </div>
        </div>
        <div class="row">
            <div class="ml-auto col-md-3">
                <label for="email" class="col-form-label">Email:</label>
            </div>
            <div class="col-md-4 mr-auto">
                <input type="text" readonly class="form-control-plaintext" id="email" value="<%= user.email %>">
            </div>
        </div>

    </main>